<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Change the normal states of unchecked checkboxes, etc.. -->
        <item name="colorControlNormal">@color/colorPrimary</item>

        <!--Overrides colorAccent on activated/checked UI controls -->
        <!--<item name="colorControlHighlight"></item>-->

        <!--Controls the ripple color-->
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="selectableItemBackground">@drawable/clickable_background</item>
        <item name="selectableItemBackgroundBorderless">@drawable/clickable_background</item>

        <!--<item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme.NoActionBar">
        <!--Splash screen-->
        <item name="android:windowBackground">@drawable/splash_logo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BookitoStarts" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="BookitoStarts.small" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="BookitoStarts.large" parent="Widget.AppCompat.RatingBar">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="BookitoStarts.extraLarge" parent="Widget.AppCompat.RatingBar">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ModalButton">
        <item name="android:background">@drawable/clickable_background</item>
        <item name="android:clickable">true</item>
        <item name="android:height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/gray_light</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyCustomTabLargeLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>
    <style name="MyCustomTabTextLargeAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyCustomTabSmallLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>
    <style name="MyCustomTabTextSmallAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>



</resources>
